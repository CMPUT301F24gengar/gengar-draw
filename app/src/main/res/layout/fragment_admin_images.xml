<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black1"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context="Fragments.admin_images">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/black2">

        <EditText
            android:id="@+id/admin_images_search_bar"
            style="@style/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|start"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/rounded_corner"
            android:hint="@string/search"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/admin_images_search_button"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|end"
            android:contentDescription="@string/todo"
            android:padding="10dp"
            android:src="@drawable/search" />
    </FrameLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start|center">

            <TextView
                android:id="@+id/admin_user_profile_images_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/blue"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="@string/user_profile_images"
                android:textColor="@color/black1"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admin_facility_images_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="@string/facility_images"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admin_event_images_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="@string/event_images"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_user_profile_images_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_facility_images_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_event_images_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>