<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black1"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        tools:ignore="UselessParent"/>

    <FrameLayout
        android:id="@+id/admin_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="bottom|start"
            android:layout_margin="20dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/black2"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <ImageView
                android:id="@+id/admin_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/red"
                android:contentDescription="@string/todo"
                android:padding="5dp"
                android:src="@drawable/admin"
                app:tint="@color/black1" />

            <LinearLayout
                android:id="@+id/admin_buttons_expanded"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/admin_profile_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/black2"
                    android:contentDescription="@string/todo"
                    android:padding="5dp"
                    android:src="@drawable/user"
                    app:tint="@color/grey" />

                <ImageView
                    android:id="@+id/admin_events_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/black2"
                    android:contentDescription="@string/todo"
                    android:padding="5dp"
                    android:src="@drawable/events"
                    app:tint="@color/grey" />

                <ImageView
                    android:id="@+id/admin_images_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/black2"
                    android:contentDescription="@string/todo"
                    android:padding="8dp"
                    android:src="@drawable/image"
                    app:tint="@color/grey" />

                <ImageView
                    android:id="@+id/admin_facilities_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/black2"
                    android:contentDescription="@string/todo"
                    android:padding="8dp"
                    android:src="@drawable/facility"
                    app:tint="@color/grey" />

                <ImageView
                    android:id="@+id/admin_qrcode_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/black2"
                    android:contentDescription="@string/todo"
                    android:padding="8dp"
                    android:src="@drawable/scan"
                    app:tint="@color/grey" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black2"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/navbar_notifications"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/green"
            android:contentDescription="@string/todo"
            android:padding="5dp"
            android:src="@drawable/bell"
            app:tint="@color/black1" />

        <ImageView
            android:id="@+id/navbar_my_events"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/black2"
            android:contentDescription="@string/todo"
            android:padding="5dp"
            android:src="@drawable/events"
            app:tint="@color/grey" />

        <ImageView
            android:id="@+id/navbar_scanner"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/black2"
            android:contentDescription="@string/todo"
            android:padding="5dp"
            android:src="@drawable/scan"
            app:tint="@color/grey" />

        <ImageView
            android:id="@+id/navbar_create_event"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/black2"
            android:contentDescription="@string/todo"
            android:padding="5dp"
            android:src="@drawable/create_event"
            app:tint="@color/grey" />

        <ImageView
            android:id="@+id/navbar_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/black2"
            android:contentDescription="@string/todo"
            android:padding="5dp"
            android:src="@drawable/user"
            app:tint="@color/grey" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black1" />

</androidx.constraintlayout.widget.ConstraintLayout>